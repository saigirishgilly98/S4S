<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".payment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="263dp"
            android:layout_height="196dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="78dp"
            android:layout_marginBottom="476dp"
            android:background="@drawable/backbox"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/avatars[2]" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="270dp"
            android:layout_marginBottom="432dp"
            android:contentDescription="Book Name                 "
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:typeface="normal"
            android:visibility="visible"
            android:text="Book Name"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="405dp"
            android:contentDescription="Author"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="visible"
            android:text="Author"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="334dp"
            android:layout_marginBottom="361dp"
            android:contentDescription="Price:"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="visible"
            android:text="Price"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="490dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="603dp"
            android:background="@drawable/backbox"
            android:gravity="center_vertical"
            android:text=" Current Balance in Wallet:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="388dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="389dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="297dp"
            android:background="@drawable/backbox"
            android:gravity="center_vertical"
            android:text="Comission:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="439dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="253dp"
            android:background="@drawable/backbox"
            android:gravity="center_vertical"
            android:text="Total Price of Book:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/textView8"
            android:layout_width="391dp"
            android:layout_height="103dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="564dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/backbox"
            android:gravity="center_vertical"
            android:text="Remaining Balance(If Bought):"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/button"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="743dp"
            android:layout_marginRight="232dp"
            android:background="@color/colorAccent"
            android:text="Confirm"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="232dp"
            android:layout_marginTop="743dp"
            android:layout_marginRight="44dp"
            android:background="@color/colorAccent"
            android:text="Cancel"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>

