<!--Rahul Gite-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/back">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            tools:text="BookTitle" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            tools:text="BookAuthor" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id = "@+id/ratings"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_ratings1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/book_ratings" />


            <ImageView
                android:id="@+id/book_ratings2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/book_ratings" />

            <ImageView
                android:id="@+id/book_ratings3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/book_ratings" />

            <ImageView
                android:id="@+id/book_ratings4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/book_ratings" />

            <ImageView
                android:id="@+id/book_ratings5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/book_ratings" />

        </LinearLayout>

        <TextView
            android:id="@+id/book_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            tools:text="BookID"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/add_wishlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_add_shopping_cart" />

        <TextView
            android:id="@+id/text_wishlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Add" />

    </LinearLayout>


    <TextView
        android:id="@+id/book_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="Rs.500" />

</LinearLayout>

